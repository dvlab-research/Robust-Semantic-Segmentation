ninja_required_version = 1.3
cxx = c++

cflags = -DTORCH_EXTENSION_NAME=sync_bn_cpu -DTORCH_API_INCLUDE_EXTENSION_H -isystem /data/ssd/xgxu/anaconda3/lib/python3.6/site-packages/torch/lib/include -isystem /data/ssd/xgxu/anaconda3/lib/python3.6/site-packages/torch/lib/include/torch/csrc/api/include -isystem /data/ssd/xgxu/anaconda3/lib/python3.6/site-packages/torch/lib/include/TH -isystem /data/ssd/xgxu/anaconda3/lib/python3.6/site-packages/torch/lib/include/THC -isystem /data/ssd/xgxu/anaconda3/include/python3.6m -D_GLIBCXX_USE_CXX11_ABI=0 -fPIC -std=c++11
ldflags = -shared

rule compile
  command = $cxx -MMD -MF $out.d $cflags -c $in -o $out
  depfile = $out.d
  deps = gcc

rule link
  command = $cxx $in $ldflags -o $out

build operator.o: compile /data/ssd/xgxu/semseg_mp/lib/sync_bn/src/cpu/operator.cpp
build sync_bn.o: compile /data/ssd/xgxu/semseg_mp/lib/sync_bn/src/cpu/sync_bn.cpp

build sync_bn_cpu.so: link operator.o sync_bn.o

default sync_bn_cpu.so

